<!DOCTYPE html>
<html>
  <head>
    <title>WhatsApp Clone</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
  </head>

  <body>
    <% if logged_in? %>
      <nav class="navbar">
        <div class="nav-brand">
          <i class="fab fa-whatsapp"></i>
          WhatsApp Clone
        </div>
        <div class="nav-user">
          <span class="username"><%= current_user.username %></span>
          <div class="user-menu">
            <button class="user-avatar" onclick="toggleMenu()">
              <i class="fas fa-user-circle"></i>
            </button>
            <div class="dropdown-menu" id="userMenu">
              <%= link_to "Profile", user_path(current_user), class: "dropdown-item" %>
              <%= link_to "Logout", logout_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        </div>
      </nav>
    <% end %>

    <% flash.each do |type, msg| %>
      <div class="flash flash-<%= type %>">
        <%= msg %>
        <button onclick="this.parentElement.remove()" class="flash-close">&times;</button>
      </div>
    <% end %>

    <main class="main-content <%= 'full-height' unless logged_in? %>">
      <%= yield %>
    </main>

    <script>
      function toggleMenu() {
        document.getElementById('userMenu').classList.toggle('show');
      }

      // Close menu when clicking outside
      window.onclick = function(event) {
        if (!event.target.matches('.user-avatar') && !event.target.matches('.user-avatar i')) {
          var dropdowns = document.getElementsByClassName('dropdown-menu');
          for (var i = 0; i < dropdowns.length; i++) {
            var openDropdown = dropdowns[i];
            if (openDropdown.classList.contains('show')) {
              openDropdown.classList.remove('show');
            }
          }
        }
      }

      // Auto-hide flash messages
      setTimeout(function() {
        var flashes = document.querySelectorAll('.flash');
        flashes.forEach(function(flash) {
          flash.style.opacity = '0';
          setTimeout(function() {
            flash.remove();
          }, 300);
        });
      }, 3000);
    </script>
  </body>
</html>

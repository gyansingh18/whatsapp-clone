<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <div class="logo">
        <i class="fas fa-users"></i>
      </div>
      <h1>Create New Chat</h1>
      <p>Start a group conversation</p>
    </div>

    <%= form_with model: @chat, local: true, class: "auth-form" do |form| %>
      <% if @chat.errors.any? %>
        <div class="flash flash-alert">
          <ul style="margin: 0; padding-left: 20px;">
            <% @chat.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-group">
        <%= form.label :name, "Group Name" %>
        <%= form.text_field :name, class: "form-control", placeholder: "Enter group name", required: true %>
      </div>

      <div class="form-group">
        <label>Add Members</label>
        <div style="max-height: 200px; overflow-y: auto; border: 2px solid #e0e0e0; border-radius: 8px; padding: 10px;">
          <% @users.each do |user| %>
            <div style="display: flex; align-items: center; padding: 8px 0; border-bottom: 1px solid #f0f0f0;">
              <input type="checkbox" name="user_ids[]" value="<%= user.id %>" id="user_<%= user.id %>" style="margin-right: 10px;">
              <label for="user_<%= user.id %>" style="display: flex; align-items: center; margin: 0; cursor: pointer; flex: 1;">
                <div style="width: 30px; height: 30px; border-radius: 50%; background: linear-gradient(135deg, #128c7e, #25d366); color: white; display: flex; align-items: center; justify-content: center; margin-right: 10px; font-size: 0.8em; font-weight: 500;">
                  <%= user.username.first.upcase %>
                </div>
                <span><%= user.username %></span>
                <% if user.online? %>
                  <span style="margin-left: auto; color: #4caf50; font-size: 0.8em;">● Online</span>
                <% end %>
              </label>
            </div>
          <% end %>
        </div>
      </div>

      <div style="display: flex; gap: 10px;">
        <%= form.submit "Create Group", class: "btn btn-primary", style: "flex: 1;" %>
        <%= link_to "Cancel", chats_path, class: "btn", style: "flex: 1; background: #f5f5f5; color: #333; text-decoration: none;" %>
      </div>
    <% end %>

    <div class="auth-links">
      Or <%= link_to "go back to chats", chats_path %>
    </div>
  </div>
</div>

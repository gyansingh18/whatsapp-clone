<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <div class="logo">
        <i class="fas fa-user-circle"></i>
      </div>
      <h1>User Profile</h1>
    </div>

    <div class="form-group">
      <label>Username</label>
      <div class="form-control" style="background: #f8f9fa; cursor: not-allowed;">
        <%= @user.username %>
      </div>
    </div>

    <div class="form-group">
      <label>Email</label>
      <div class="form-control" style="background: #f8f9fa; cursor: not-allowed;">
        <%= @user.email %>
      </div>
    </div>

    <div class="form-group">
      <label>Status</label>
      <div class="form-control" style="background: #f8f9fa; cursor: not-allowed;">
        <% if @user.online? %>
          <span style="color: #4caf50;"><i class="fas fa-circle"></i> Online</span>
        <% else %>
          <span style="color: #999;"><i class="fas fa-circle"></i> Offline</span>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <label>Member Since</label>
      <div class="form-control" style="background: #f8f9fa; cursor: not-allowed;">
        <%= @user.created_at.strftime('%B %d, %Y') %>
      </div>
    </div>

    <div class="auth-links">
      <%= link_to "Back to Chats", chats_path %>
    </div>
  </div>
</div>
